import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class PasswordGenerator {

    
    static class Password {
        private String password;

        public Password(String password) {
            this.password = password;
        }

        public String getValue() {
            return password;
        }

        public String getStrength() {
            int score = 0;

            if (password.length() >= 8) score++;
            if (password.length() >= 12) score++;
            if (password.matches(".*[A-Z].*")) score++;
            if (password.matches(".*[a-z].*")) score++;
            if (password.matches(".*[0-9].*")) score++;
            if (password.matches(".*[!@#$%^&*()-_=+\\[\\]{};:,.<>?].*")) score++;

            if (score <= 2) return "Weak";
            else if (score == 3) return "Medium";
            else if (score == 4) return "Good";
            else return "Very Strong";
        }
    }

    static class Alphabet {
        private List<Character> characters;

        public Alphabet(boolean includeLower, boolean includeUpper,
                        boolean includeNumbers, boolean includeSymbols) {
            characters = new ArrayList<>();

            if (includeLower) {
                for (char c = 'a'; c <= 'z'; c++) characters.add(c);
            }
            if (includeUpper) {
                for (char c = 'A'; c <= 'Z'; c++) characters.add(c);
            }
            if (includeNumbers) {
                for (char c = '0'; c <= '9'; c++) characters.add(c);
            }
            if (includeSymbols) {
                String symbols = "!@#$%^&*()-_=+[]{};:,.<>?";
                for (char c : symbols.toCharArray()) characters.add(c);
            }
        }

        public char getRandomChar() {
            if (characters.isEmpty()) {
                throw new IllegalStateException("No characters available for password generation!");
            }
            int index = (int) (Math.random() * characters.size());
            return characters.get(index);
        }
    }

    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice;

        do {
            System.out.println("\n=== Welcome to Secure Password Generator ===");
            System.out.println("1. Generate Password");
            System.out.println("2. Check Password Strength");
            System.out.println("3. Security Tips");
            System.out.println("4. Quit");
            System.out.print("Enter your choice: ");
            choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1 -> generatePassword(scanner);
                case 2 -> checkPassword(scanner);
                case 3 -> showTips();
                case 4 -> System.out.println("Goodbye!");
                default -> System.out.println("Invalid choice! Try again.");
            }

        } while (choice != 4);

        scanner.close();
    }

    private static void generatePassword(Scanner scanner) {
        System.out.println("\nDo you want to include the following? (yes/no)");

        System.out.print("Lowercase letters (a-z): ");
        boolean lower = scanner.nextLine().equalsIgnoreCase("yes");

        System.out.print("Uppercase letters (A-Z): ");
        boolean upper = scanner.nextLine().equalsIgnoreCase("yes");

        System.out.print("Numbers (0-9): ");
        boolean numbers = scanner.nextLine().equalsIgnoreCase("yes");

        System.out.print("Symbols (!@#$...): ");
        boolean symbols = scanner.nextLine().equalsIgnoreCase("yes");

        System.out.print("Enter desired password length: ");
        int length = scanner.nextInt();
        scanner.nextLine();

        Alphabet alphabet = new Alphabet(lower, upper, numbers, symbols);

        StringBuilder password = new StringBuilder();
        for (int i = 0; i < length; i++) {
            password.append(alphabet.getRandomChar());
        }

        Password generated = new Password(password.toString());
        System.out.println("Generated Password: " + generated.getValue());
        System.out.println("Strength: " + generated.getStrength());
    }

    private static void checkPassword(Scanner scanner) {
        System.out.print("\nEnter a password to check: ");
        String input = scanner.nextLine();
        Password p = new Password(input);
        System.out.println("Password Strength: " + p.getStrength());
    }

    private static void showTips() {
        System.out.println("\n--- Security Tips ---");
        System.out.println("✔ Use at least 12 characters.");
        System.out.println("✔ Mix uppercase, lowercase, numbers, and symbols.");
        System.out.println("✔ Avoid dictionary words or personal info.");
        System.out.println("✔ Use a different password for every account.");
    }
}
